<div class="container">
  <div class="row">
    <div class="col s5"><span class="flow-text">
        <div id="current-doctors" class="current-patient ">
          <table>
            <tr>
              <th>Current Patients</th>
            </tr>
            {{#each doctors}}
            {{#if current_patient}}
            <tr>
              <td>{{this.patient_name}}</td>
            </tr>
            {{/if}}

            {{/each}}
          </table>
        </div>
      </span>
    </div>
    <div class="col s6"><span class="flow-text">
        <div id="new-patient-request" class="new-patient-request ">
          <table>
            <tr>
              <th>New Patients Requests</th>
            </tr>
            {{#each doctors}}
            {{#if patient_request}}
            <tr id="patient{{patientId}}">
              <td>{{this.patient_name}}
                  <a class="accept-patient waves-effect waves-light btn-small float-right ml-2">
                    <i  class="material-icons add_box text-center" data-patientId={{patientId}} data-doctorId={{doctorId}}>done</i></a>
          
                  <a class="decline-patient waves-effect waves-light btn-small float-right ml-2">
                    <i class="material-icons text-center" data-patientId={{patientId}} data-doctorId={{doctorId}}>close</i></a>
                </td>
            </tr>
            {{/if}}

            {{/each}}
          </table>
        </div>
      </span>
    </div>
  </div>
</div>
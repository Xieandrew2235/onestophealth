<div class="container z-depth-2 blue-card">
  <div class="row">
    <div class="col s5"><span class="flow-text">
        <div id="current-doctors" class="current-patient">
          {{#each doctors}}
          <div id="current-patients">
            <a href="/api/patient_doctors/{{id}}"> Patients</a>
          </div>
          <table>
            <tr>
              <th>Doctor Information</th>
              <th>  <button class="btn waves-effect waves-light float-right" id="doctor-logout" >Logout
                <i class="material-icons right">logout</i>
              </button></th>
            </tr>
            <tr>
              <td><strong class="">Doctor's Name: </strong> {{this.doctor_name}}</td>
            </tr>
            <tr>
              <td><strong>Doctor's Primary Address:</strong> {{this.doctor_primary_address1}}</td>
            </tr>
            <tr>
              <td><strong>Doctor's Specialization: </strong>{{this.doctor_specialization}}</td>
            </tr>
            <tr>
              <td><strong>Doctor Type: </strong>{{this.doctor_type}}</td>
            </tr>
            <tr>
              <td><strong>Doctor Accepted Insurance(s): </strong>{{this.doctor_insurance_accepted}}
              </td>
            </tr>
          </table>
        {{/each}}
        </div>

      </span>
    </div>
  </div>
</div>

<script>
   var logoutConf= {
         baseUrl: 'https://dev-527021.okta.com',
    clientId: '${DOCTOR_CLIENT_ID}',
    redirectUri: 'http://localhost:8080',
    authParams: {
      issuer: "https://dev-527021.okta.com/oauth2/default",
      responseType: ['token', 'id_token'],
      scopes: ['openid', 'email', 'profile'],
    },
   }
    oktaSignIn = new OktaSignIn(logoutConf);
    function logout() {
    console.log("logout pressed");
    oktaSignIn.signOut("/");
    self.location = "../../";
  }

   $("#doctor-logout").on("click", function() {
      console.log("Doctor Logout Button pressed");
      logout();
    });

</script>